<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="@string/personal_finance"
            android:textColor="@color/md_theme_light_onPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Username field -->
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:autofillHints=""
            android:backgroundTint="@color/md_theme_light_primary"
            android:hint="@string/username"
            android:inputType=""
            android:minHeight="48dp" />

        <!-- Password field -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:autofillHints=""
            android:backgroundTint="@color/md_theme_light_primary"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <!-- Login button -->
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/md_theme_light_primary"
            android:textColor="@color/md_theme_light_onPrimary"
            android:text="@string/login" />

        <!-- Forgot Details Button -->
        <Button
            android:id="@+id/forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/md_theme_light_primaryContainer"
            android:textColor="@color/md_theme_light_onPrimary"
            android:text="@string/forgot_details" />

        <!-- Register Button -->
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/md_theme_light_tertiaryContainer"
            android:textColor="@color/md_theme_light_onTertiaryContainer"
            android:text="@string/register" />

    </LinearLayout>
</LinearLayout>