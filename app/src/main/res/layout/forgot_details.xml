<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="@string/forgot_details"
            android:textColor="@color/pastelOrangeOnPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Email field -->
        <EditText
            android:id="@+id/forgot_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/pastelOrangePrimary"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <!-- Send Verification Code button -->
        <Button
            android:id="@+id/send_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/pastelOrangePrimary"
            android:text="@string/send_request"
            android:textColor="@color/pastelOrangeOnPrimary" />

        <!-- Back to Login button -->
        <Button
            android:id="@+id/back_to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/pastelOrangePrimaryVariant"
            android:text="@string/back_to_login"
            android:textColor="@color/pastelOrangeOnPrimary" />

        <!-- Error Message Text -->
        <TextView
            android:id="@+id/forgot_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/error_message"
            android:textColor="@color/colorError"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
